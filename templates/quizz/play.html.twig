{% extends 'layout/default/_index.html.twig' %}

{% block title %}Quizz : {{ quizz.name }}{% endblock %}

{% block main %}
    <section class="bg-image">
        <img src="{{ asset('img/quizzs_cover.png') }}" alt="Les Quizzs"/>

        <h1>
            <small>Quizz :</small>
            <br/>
            {{ quizz.name }}
        </h1>
    </section>

    <section class="controls">
        <a href="#" class="text-primary" onclick="history.go(-1)">
            <i class="fa-solid fa-circle-arrow-left"></i>
            Retour
        </a>
    </section>

    <section class="alt">
        <h2>Question {{ question.position }}/{{ quizz.questions | length }}</h2>
        <p>
            <strong>{{ question.text | raw }}</strong>
        </p>
    </section>

    <form method="post">
        {% if question.answers | length > 0 %}
            <ol class="answer">
                {% for answer in question.answers %}
                    <li>
                        <label for="answer-{{ answer.id }}">
                            <input type="radio" name="answer" value="{{ answer.id }}" id="answer-{{ answer.id }}"/>
                            <strong>{{ answer.text | raw }}</strong>
                        </label>
                    </li>
                {% endfor %}
            </ol>

            <p class="text-center">
                <button type="submit" class="app-btn cta">Question suivante</button>
            </p>
        {% endif %}
    </form>
{% endblock %}
