{% extends 'base.html.twig' %}

{% block title %}Authentification{% endblock %}

{% block body %}
    <section>
        <h1>Connectez-vous</h1>

        <form method="post" class="app-form">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <div class="form-group">
                <label for="inputEmail" class="form-label required">Adresse e-mail</label>
                <input type="email"
                       value="{{ last_username }}"
                       name="email"
                       id="inputEmail"
                       class="form-control"
                       autocomplete="email"
                       required
                       autofocus/>
            </div>

            <div class="form-group">
                <label for="inputPassword" class="form-label required">Mot de passe</label>
                <input type="password"
                       name="password"
                       id="inputPassword"
                       class="form-control"
                       autocomplete="current-password"
                       required>
            </div>

            <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

            <button class="app-btn cta" type="submit">Connexion</button>
        </form>
    </section>
{% endblock %}
