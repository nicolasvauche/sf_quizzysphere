{% extends 'layout/admin/_index.html.twig' %}

{% block title %}Nouvelle Réponse{% endblock %}

{% block main %}
    <section class="bg-image">
        <img src="{{ asset('img/quizzs_cover.png') }}" alt="Les Quizzs"/>

        <h1>
            <small>{{ question.quizz.name }} :</small>
            <br/>
            Nouvelle Réponse
        </h1>
    </section>

    <section class="controls">
        <a href="{{ path('app_admin_quizz_show', {'id': question.quizz.id}) }}" class="text-primary">
            <i class="fa-solid fa-circle-arrow-left"></i>
            Quizz
        </a>
    </section>

    <section class="alt">
        <p class="mb-0">
            <strong class="text-primary">Question n°{{ question.position }} : </strong>
            {{ question.text | raw }}
            <br/>
            <strong class="text-primary">Réponse n°{{ maxPosition + 1 }}</strong>
        </p>
    </section>

    {{ include('admin/answer/_form.html.twig') }}
{% endblock %}
