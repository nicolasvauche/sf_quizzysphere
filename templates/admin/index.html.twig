{% extends 'layout/admin/_index.html.twig' %}

{% block title %}Administration{% endblock %}

{% block main %}
    <section>
        <h1>Administration</h1>
        <p>Gérez les Paramètres de l'application, les Quizzs, les Cours et les Utilisateurs.</p>
    </section>

    <section>
        <div class="app-grid third">
            <article class="app-card">
                <a href="{{ path('app_admin_user_index') }}">
                    <div class="card-header">
                        <strong>Utilisateur{% if users | length > 1 %}s{% endif %}</strong>
                    </div>
                    <div class="card-body">
                        <p class="big">{{ users | length }}</p>
                    </div>
                    <div class="card-footer">
                        inscrit{% if users | length > 1 %}s{% endif %}
                    </div>
                </a>
            </article>

            <article class="app-card">
                <a href="{{ path('app_admin_usergroup_index') }}">
                    <div class="card-header">
                        <strong>Groupe{% if userGroups | length > 1 %}s{% endif %} d'Utilisateurs</strong>
                    </div>
                    <div class="card-body">
                        <p class="big">{{ userGroups | length }}</p>
                    </div>
                    <div class="card-footer">
                        créé{% if userGroups | length > 1 %}s{% endif %}
                    </div>
                </a>
            </article>
        </div>
    </section>
{% endblock %}
