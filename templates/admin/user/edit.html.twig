{% extends 'layout/admin/_index.html.twig' %}

{% block title %}Modifier un Utilisateur{% endblock %}

{% block main %}
    <section class="bg-image">
        <img src="{{ asset('img/users_cover.png') }}" alt="Les Utilisateurs"/>

        <h1>
            <small>Modifier un Utilisateur :</small>
            <br/>
            {{ user.fullname }}
        </h1>
    </section>

    <section class="controls">
        <a href="{{ path('app_admin_user_index') }}" class="text-primary">
            <i class="fa-solid fa-circle-arrow-left"></i>
            Liste
        </a>
        <a href="{{ path('app_admin_user_show', {id: user.id}) }}" class="text-primary">
            <i class="fa-solid fa-eye"></i>
            DÃ©tails
        </a>
        <a href="{{ path('app_admin_user_delete', {id: user.id}) }}"
           class="text-danger"
           onclick="return window.confirm('Supprimer cet Utilisateur ?')">
            <i class="fa-solid fa-trash-can"></i>
            Supprimer
        </a>
    </section>

    {{ include('admin/user/_form.html.twig', {'button_label': 'Modifier'}) }}
{% endblock %}
