{{ form_start(form, {'attr': {'class': 'app-form'}}) }}

<fieldset class="form-fieldset">
    <div class="form-group">
        <label for="{{ form.name.vars.id }}"
               class="form-label {% if form.name.vars.required %}required{% endif %}">
            {{ form.name.vars.label }}
        </label>
        {{ form_widget(form.name) }}
        {{ form_errors(form.name) }}
    </div>

    <div class="form-group">
        <label for="{{ form.cover.vars.id }}"
               class="form-label {% if form.cover.vars.required %}required{% endif %}">
            {{ form.cover.vars.label }}
        </label>
        {{ form_widget(form.cover) }}
        {{ form_errors(form.cover) }}
    </div>
</fieldset>

<fieldset class="form-fieldset">
    <legend class="form-legend">Informations du Quizz</legend>

    <div class="form-group toggle">
        <label for="{{ form.active.vars.id }}"
               class="toggle-label {% if form.active.vars.required %}required{% endif %}">
            {{ form.active.vars.label }}
        </label>
        {{ form_widget(form.active) }}
        <div class="toggle-switch"></div>
    </div>

    <div class="form-group">
        <label for="{{ form.quizzCategories.vars.id }}"
               class="form-label {% if form.quizzCategories.vars.required %}required{% endif %}">
            {{ form.quizzCategories.vars.label }}
        </label>
        {{ form_widget(form.quizzCategories) }}
        {{ form_errors(form.quizzCategories) }}
    </div>

    <div class="form-group">
        <label for="{{ form.level.vars.id }}"
               class="form-label {% if form.level.vars.required %}required{% endif %}">
            {{ form.level.vars.label }}
        </label>
        {{ form_widget(form.level) }}
        {{ form_errors(form.level) }}
    </div>

    <div class="form-group">
        <label for="{{ form.timer.vars.id }}"
               class="form-label {% if form.timer.vars.required %}required{% endif %}">
            {{ form.timer.vars.label }}
        </label>
        {{ form_widget(form.timer) }}
        {{ form_errors(form.timer) }}
    </div>
</fieldset>

<button type="submit" class="app-btn cta">{{ button_label|default('Cr√©er') }}</button>
{{ form_end(form) }}
